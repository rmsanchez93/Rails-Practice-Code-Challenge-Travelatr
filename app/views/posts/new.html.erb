<h1>Create a Post</h1>
<hr><br>

<%= form_for @post do |f| %>
    Title: <%= f.text_field :title %><br><br>
    Content: <br><%= f.text_area :content %><br><br>
    Blogger: <%= f.collection_select :blogger_id, Blogger.all, :id, :name %><br><br>
    Destination: <%= f.collection_select :destination_id, Destination.all, :id, :name %><br>
    <%= f.submit %>
<% end %>